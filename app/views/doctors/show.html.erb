  <div class="container">

    <h1>Account information</h1>
    <div style="float:right;">
      <%= link_to 'Edit', edit_doctor_path(@doctor) %> 
      <% if current_user.try(:admin) %>
      |<%= link_to 'Back', doctors_path %>
      <% end %>
    </div>
    <p>
      <strong>License:</strong>
      <%= @doctor.license %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @doctor.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @doctor.email %>
    </p>

    <p>
      <strong>Password:</strong>
      <%= @doctor.password %>
    </p>

    <p>
      <strong>State:</strong>
      <%= @doctor.state %>
    </p>

    <% if current_user.try(:admin) %>
    <p>
      <strong>Admin:</strong>
      <%= @doctor.admin %>
    </p>
    <% end %>
</div>
